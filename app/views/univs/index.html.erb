<p id="notice"><%= notice %></p>

<h1>Listing Univs</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Univ name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @univs.each do |univ| %>
      <tr>
        <td><%= univ.id %></td>
        <td><%= univ.univ_name %></td>
        <td><%= link_to 'Show', univ %></td>
        <td><%= link_to 'Edit', edit_univ_path(univ) %></td>
        <td><%= link_to 'Destroy', univ, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

